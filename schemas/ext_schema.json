{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "$defs": {
    "ext_data": {
      "type": "object",
      "required": ["description", "versions"],
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "type": { "enum": ["unprivileged", "privileged"] },
        "requires": {
          "description": "Extension(s) required by this extension",
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" }}
          ]
        },
        "implies": {
          "description": "Extension(s) implied by this extension (i.e., any subextesions)",
          "oneOf": [
            { "$ref": "schema_defs.json#/$defs/extension_name" },
            { "type": "array", "items": { "$ref": "schema_defs.json#/$defs/extension_name" }}
          ]
        },
        "versions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["version", "ratification_date"],
            "properties": {
              "version": {
                "oneOf": [
                  {"type": "number"},
                  {
                    "type": "string",
                    "pattern": "^[0-9]+(\\.[0-9]+(\\.[0-9]+(-[a-fA-F0-9]+)?)?)?$"
                  }
                ]
              },
              "ratification_date": { 
                "oneOf": [
                  {"type": "string", "pattern": "^20[0-9][0-9]-[0-9][0-9]$", "$comment": "When ratification date is known" },
                  {"type": "string", "pattern": "^unknown$", "$comment": "When ratification date is unknown" },
                  {"type": "null", "$comment": "When version isn't ratified" }
                ]
              },
              "changes": { "type": "string", "description": "Changes since last version" },
              "url": { "type": "string", "format": "uri", "description": "Link to ratified document" }
            },
            "additionalProperties": false
          }
        },
        "exception_codes": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Exceptions defined by this extension",
            "properties": {
              "num": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "interrupt_codes": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Interrupts defined by this extension",
            "properties": {
              "num": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },

  "type": "object",
  "patternProperties": {
    "^([A-WY])|([SXZ][a-z]+)$": {
      "$ref": "#/$defs/ext_data"
    }
  },
  "additionalProperties": false,
  "maxProperties": 1
}